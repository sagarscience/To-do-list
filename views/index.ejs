<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Todo List</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <header class="header">
    <h1>ğŸ“ Todo List</h1>
  </header>

  <main class="main-container">
    <!-- Task Form -->
    <form action="/add" method="POST" class="task-form" onsubmit="return validateForm()">
      <input type="text" name="task" id="taskInput" placeholder="Enter a task..." />
      <select name="priority">
        <option value="Low">Low</option>
        <option value="Medium">Medium</option>
        <option value="High">High</option>
      </select>
      <button type="submit">+</button>
    </form>

    <!-- Filter Form -->
    <form action="/" method="GET" class="filter-form">
      <label>Filter by Priority:</label>
      <select name="priority" onchange="this.form.submit()">
        <option value="All" <%= filter === "All" ? "selected" : "" %>>All</option>
        <option value="Low" <%= filter === "Low" ? "selected" : "" %>>Low</option>
        <option value="Medium" <%= filter === "Medium" ? "selected" : "" %>>Medium</option>
        <option value="High" <%= filter === "High" ? "selected" : "" %>>High</option>
      </select>
    </form>

    <!-- Task List -->
    <ul class="task-list">
      <% tasks.forEach((task, index) => { %>
        <li class="task-item">
          <span><%= task.name %> (<%= task.priority %>)</span>
          <form action="/edit/<%= index %>" method="POST" class="inline-form">
            <input type="text" name="newTask" placeholder="Edit..." required />
            <button type="submit">âœï¸</button>
          </form>
          <form action="/delete/<%= index %>" method="POST" class="inline-form">
            <button type="submit">ğŸ—‘ï¸</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </main>

  <footer class="footer">
    <p>&copy; 2025 Todo App by Sagar Agrawal</p>
  </footer>

  <script>
    function validateForm() {
      const input = document.getElementById("taskInput");
      if (input.value.trim() === "") {
        alert("Task cannot be empty!");
        return false;
      }
      return true;
    }
  </script>
</body>
</html>
