<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Todo List</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <header class="header">
    <h1>üìù Todo List</h1>
  </header>

  <main class="main-container">
    <!-- Add Task -->
    <form action="/add" method="POST" class="task-form" onsubmit="return validateForm()">
      <input type="text" name="task" id="taskInput" placeholder="Enter a task..." />
      <select name="priority">
        <option value="Low">Low</option>
        <option value="Medium">Medium</option>
        <option value="High">High</option>
      </select>
      <button type="submit">+</button>
    </form>

    <!-- Filter -->
    <form action="/" method="GET" class="filter-form">
      <label>Filter by Priority:</label>
      <select name="priority" onchange="this.form.submit()">
        <option value="All" <%= filter === "All" ? "selected" : "" %>>All</option>
        <option value="Low" <%= filter === "Low" ? "selected" : "" %>>Low</option>
        <option value="Medium" <%= filter === "Medium" ? "selected" : "" %>>Medium</option>
        <option value="High" <%= filter === "High" ? "selected" : "" %>>High</option>
      </select>
    </form>

    <!-- Task List -->
    <ul class="task-list">
      <% tasks.forEach((task) => { %>
        <li class="task-item">
          <!-- Left: Task text -->
          <div class="task-left">
            <form action="/toggle/<%= task._id %>" method="POST" class="checkbox-form">
              <input type="checkbox" onchange="this.form.submit()" <%= task.completed ? "checked" : "" %> />
            </form>
            <span class="<%= task.completed ? 'completed' : '' %>">
              <%= task.name %> (<%= task.priority %>)
            </span>
          </div>

          <!-- Right: Actions -->
          <div class="task-actions">
            <form action="/edit/<%= task._id %>" method="POST" class="inline-form">
              <input type="text" name="newTask" placeholder="Edit..." />
              <button type="submit">‚úèÔ∏è</button>
            </form>
            <form action="/delete/<%= task._id %>" method="POST" class="inline-form">
              <button type="submit">üóëÔ∏è</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </main>

  <footer class="footer">
    <p>&copy; 2025 Todo App by Sagar Agrawal</p>
  </footer>

  <script>
    function validateForm() {
      const input = document.getElementById("taskInput");
      if (input.value.trim() === "") {
        alert("Task cannot be empty!");
        return false;
      }
      return true;
    }
  </script>
</body>
</html>
